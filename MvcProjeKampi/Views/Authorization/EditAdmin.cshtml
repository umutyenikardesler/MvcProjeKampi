@model EntityLayer.Concrete.Admin

@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin Güncelleme Sayfası</h2>


@using (Html.BeginForm("EditAdmin", "Authorization", FormMethod.Post))
{
    <div class="form">
        @Html.HiddenFor(x => x.AdminID, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(x => x.CategoryID)*@
        <br />
        @Html.Label("Admin Adı")
        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
        <br />
        @Html.Label("Admin Şifresi")
        @Html.TextAreaFor(x => x.AdminPassword, new { @class = "form-control" })
        <br />
        @Html.Label("Admin Role")
        @Html.TextAreaFor(x => x.AdminRole, new { @class = "form-control" })
        <br /> 
        <button class="btn btn-info">Admini Güncelle</button>
    </div>
}
