@using EntityLayer.Concrete
@model List<Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <h1 class="pt-2 pb-2">Kategori Sayfası</h1>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kullanıcı Mail</th>
            <th>Yetki</th>
            <th>Durum</th>
            <th>Pasif Yap</th>
            <th>Yetkisini Değiştir</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <th>@item.AdminID</th>
                <td>@item.AdminUserName</td>
                <td>@item.AdminRole</td>
                <td>Aktif</td>
                <td> <a href="/Authorization/DeleteCategory/@item.AdminID" class="btn btn-danger">Pasif Yap</a> </td>
                <td> <a href="/Authorization/EditAdmin/@item.AdminID" class="btn btn-warning">Değiştir</a> </td>
            </tr>
        }

    </table>

    <a href="/Authorization/AddAdmin/" class="btn btn-info">Yeni Admin Tanımla</a>

</section>
